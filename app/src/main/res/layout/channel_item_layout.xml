<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="@dimen/_15sdp"
    android:background="@drawable/bottom_shadow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="@color/colorPrimaryVariant"
        android:src="@drawable/profile_gif"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"/>

    <LinearLayout
        android:gravity=""
        android:layout_marginStart="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtName"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorPrimaryVariant"
            android:layout_margin="@dimen/_2sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Name Of User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/txtSubscriber"
            android:textSize="@dimen/_10sdp"
            android:textColor="#CD0303"
            android:layout_margin="@dimen/_2sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Subscribers: 11M+ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/txtVideo"
            android:textSize="@dimen/_10sdp"
            android:textColor="#CD0303"
            android:layout_margin="@dimen/_2sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Videos: 11M+ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/txtView"
            android:textSize="@dimen/_10sdp"
            android:textColor="#CD0303"
            android:layout_margin="@dimen/_2sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Views: 11M+ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>