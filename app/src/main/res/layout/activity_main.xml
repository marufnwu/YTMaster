<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <RelativeLayout
        app:layout_constraintBottom_toTopOf="@+id/mainScroll"
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bottom_shadow"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgDrawer"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/drawer" />

        <TextView
            android:textColor="@color/colorPrimaryVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/app_name"
            android:textSize="@dimen/_14sdp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:elevation="@dimen/_60sdp"
            android:src="@drawable/user" />
    </RelativeLayout>




    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_4sdp"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/edtLink"
                        style="@style/LinkEdittext"
                        android:hint="Enter Link"
                        android:layout_weight="2.5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnGen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:background="@drawable/round_background"
                        android:shadowColor="@color/colorPrimaryVariant"
                        android:shadowDy="5"
                        android:text="GENErate"
                        android:textColor="@color/white" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:layout_margin="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:background="@color/Gainsboro"
                    android:id="@+id/shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </com.facebook.shimmer.ShimmerFrameLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgMainBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>




            </FrameLayout>



            <LinearLayout
                android:layout_margin="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Recently Generate"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/recentLinkSeeAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="See All"
                            android:textSize="@dimen/_14sdp" />
                    </RelativeLayout>



                </LinearLayout>

                <FrameLayout
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/recyLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/layoutProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:text="Something went wrong"
                        android:visibility="visible"
                        android:id="@+id/txtLinkError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Valuable Users"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/channelsSeeAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="See All"
                            android:textSize="@dimen/_14sdp" />
                    </RelativeLayout>



                </LinearLayout>

                <FrameLayout
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/recyUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/layoutUserProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"/>
                    </RelativeLayout>

                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layoutCreateNewDomain"
                    android:padding="@dimen/_3sdp"
                    android:orientation="vertical"
                    android:background="@drawable/round_white_bg"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/domain"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"/>

                    <TextView
                        android:minLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/ubuntu"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="Create Special Link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutCreateNewSubDomain"
                    android:padding="@dimen/_3sdp"
                    android:orientation="vertical"
                    android:background="@drawable/round_white_bg"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/sub"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"/>

                    <TextView
                        android:minLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/ubuntu"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="Create Subdomain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>
            
            
            
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <pl.droidsonroids.gif.GifImageView
                        android:src="@drawable/facebook"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <pl.droidsonroids.gif.GifImageView
                    android:src="@drawable/youtube"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <pl.droidsonroids.gif.GifImageView
                        android:src="@drawable/instagram"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"/>




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>